package com.qiuym.qiuymmod.event;

import net.minecraft.advancements.Advancement;
import net.minecraft.advancements.AdvancementProgress;
import net.minecraft.resources.ResourceLocation;
import net.minecraft.server.level.ServerPlayer;
import net.minecraft.server.PlayerAdvancements;
import net.minecraft.world.entity.ai.attributes.AttributeModifier;
import net.minecraft.world.entity.ai.attributes.Attributes;
import net.minecraftforge.event.entity.player.AdvancementEvent;
import net.minecraftforge.eventbus.api.SubscribeEvent;
import net.minecraftforge.fml.common.Mod;
import java.util.*;

@Mod.EventBusSubscriber(modid = "qiuymmod")
public class ProgressEventHandler {
    
    @SubscribeEvent
    public static void onAdvancementGet(AdvancementEvent event) {
        if (!(event.getEntity() instanceof ServerPlayer player)) return;
        
        ResourceLocation advancementId = event.getAdvancement().m_138327_();
        
        if (!"qiuymmod:????".equals(advancementId.toString())) {
            return;
        }
        
        PlayerAdvancements playerAdvancements = player.m_8960_();
        AdvancementProgress progress = playerAdvancements.m_135996_(event.getAdvancement());
        
        if (!progress.m_8193_()) {
            return;
        }
        
        player.m_213846_(net.minecraft.network.chat.Component.m_237115_(
            "????"
        ));
    }
}